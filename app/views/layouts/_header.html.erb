<header>
	<h1>Welcome to the Academic Planning Tool</h1>
	<h3>SUPER MEGA ULTRA-LITE EDITION (<em>Still better than that new one</em>)</h3>
	<%= link_to "Home", root_path %>
	<% if user_signed_in? %>
		<h4>Welcome, <%= current_user.login %></h4>
		<% if current_user.is_admin? %>
			<h4>You're an admin!</h4>
		<% end %>
		<div>
		<%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
	<% else %>
		<div>
		<%= link_to "Sign In", new_user_session_path, :method => :get %>
		<%= link_to "Sign Up", new_user_registration_path, :method => :get %>
	<% end %>
	</div>
</header>